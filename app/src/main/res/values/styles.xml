<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:dialogTheme">@style/AppThemeDialog</item>
        <item name="android:alertDialogTheme">@style/AppThemeAlertDialog</item>
    </style>


    <style name="AppThemeDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:colorAccent">@color/blue</item>
    </style>
    <style name="AppThemeAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:colorAccent">@color/blue</item>
    </style>

</resources>
